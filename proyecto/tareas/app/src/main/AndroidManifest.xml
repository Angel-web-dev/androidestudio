<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tareas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- LoginActivity: pantalla principal al abrir la app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla principal despuÃ©s del login -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Pantalla para agregar nueva tarea -->
        <activity
            android:name=".NuevaTareaActivity"
            android:exported="false" />

        <!-- Pantalla para detalle de tarea -->
        <activity
            android:name=".DetalleTareaActivity"
            android:exported="false" />

    </application>

</manifest>
